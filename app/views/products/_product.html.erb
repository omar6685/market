<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= product.brand %>
  </p>
  
  <p>
    <strong>Model:</strong>
    <%= product.model %>
  </p>
  
  <p>
    <strong>Condition:</strong>
    <%= product.condition %>
  </p>
  
  <p>
    <strong>Price:</strong>
    <%= number_to_currency(product.price/100) %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>
  
  <p>
    <strong>Sales count:</strong>
    <%= product.sales_count %>
  </p>

  <p>
    <strong>PAYMENT:</strong>
    <%= button_to "Buy now", checkout_create_path, params: {id: product.id}, remote: true %>
  </p>

</div>
