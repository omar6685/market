<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>
  
  <p>
    <strong>PAYMENT:</strong>
    <%= button_to "Buy now", checkout_create_path, params: {id: product.id}, remote: true %>
  </p>

</div>
